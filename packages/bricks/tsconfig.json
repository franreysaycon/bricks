{
  "exclude": ["node_modules"],
  "include": ["src/**/*"],
  "compilerOptions": {
    "declaration": true,
    "declarationDir": ".",
    "esModuleInterop": true,
    "importHelpers": true,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "target": "ES2017",
  },
}
